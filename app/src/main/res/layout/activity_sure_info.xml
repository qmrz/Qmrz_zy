<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SureInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/color_1E78EB"
        android:paddingTop="20dp">

        <LinearLayout
            android:id="@+id/ll_back_hzinfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/fanhui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/color_ffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确认核验结果"
            android:textColor="@color/color_ffffff"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:drawableStart="@mipmap/jc_qygk"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="核验信息"
            android:textColor="@color/color_1E78EB" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_EBEBEB"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="身份证号码"
                android:gravity="center_vertical"
                android:textColor="@color/color_333333"
                android:paddingStart="@dimen/dimen15"
                android:textSize="@dimen/text_size_16sp"/>

            <EditText
                android:id="@+id/et_sfzhm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint=""
                android:background="@null"
                android:gravity="center_vertical|right"
                android:paddingEnd="@dimen/dimen15"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/color_333333"
                android:singleLine="true"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_EBEBEB"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="住址"
                android:gravity="center_vertical"
                android:textColor="@color/color_333333"
                android:paddingStart="@dimen/dimen15"
                android:textSize="@dimen/text_size_16sp"/>

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint=""
                android:background="@null"
                android:gravity="center_vertical|right"
                android:paddingEnd="@dimen/dimen15"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/color_333333"
                android:singleLine="true"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_EBEBEB"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen20"
            android:background="@color/color_ffffff"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_commit_tj"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen45"
        android:background="@drawable/corner_5dp"
        android:layout_marginStart="@dimen/dimen30"
        android:layout_marginEnd="@dimen/dimen30"
        android:layout_marginBottom="@dimen/dimen30"
        android:text="提  交"
        android:layout_marginTop="@dimen/dimen20"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/text_size_16sp"
        />
</LinearLayout>