<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/color_1E78EB"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="核验结果"
            android:textColor="@color/color_ffffff"
            android:textSize="18sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen45"
        android:background="@drawable/corner_5dp"
        android:layout_marginStart="@dimen/dimen30"
        android:layout_marginEnd="@dimen/dimen30"
        android:layout_marginBottom="@dimen/dimen30"
        android:text="完  成"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dimen20"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/text_size_16sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:layout_above="@+id/btn_complete"
        >

        <ImageView
            android:id="@+id/iv_hy_tbicon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"/>


        <TextView
            android:id="@+id/tv_hytg_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="核验通过!"
            android:layout_above="@+id/iv_hy_tbicon"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_1E78EB"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_20sp"
            android:layout_marginBottom="@dimen/dimen50"
            />

        <TextView
            android:id="@+id/tv_yxfx_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="允许放行"
            android:layout_above="@+id/tv_hytg_result"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_24sp"
            android:layout_marginBottom="@dimen/dimen30"
            />

    </RelativeLayout>

</RelativeLayout>